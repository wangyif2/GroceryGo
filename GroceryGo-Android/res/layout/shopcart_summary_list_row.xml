<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/shopcart_summary_list_row_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >

	<TextView
		android:id="@+id/shopcart_summary_storeparent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.6"
		android:text="@+id/shopcart_summary_storeparent"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:textStyle="bold"
		android:singleLine="false"
		android:gravity="center_vertical"
		android:clickable="false"
		android:focusable="false" >
	</TextView>
	
	<TextView
		android:id="@+id/shopcart_summary_total"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_weight="0.4"
		android:text="@+id/shopcart_summary_total"
		android:textColor="@color/holo_red_dark"
		android:textSize="18sp"
		android:fontFamily="sans-serif"
		android:singleLine="true"
		android:gravity="center"
		android:background="@color/transparent" >
	</TextView>
	
	<!-- Hold meta for store parent id -->
	<TextView
		android:id="@+id/shopcart_summary_storeparent_id"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"
		android:text="" />
</LinearLayout>
