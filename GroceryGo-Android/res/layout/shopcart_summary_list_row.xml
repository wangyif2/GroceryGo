<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/shopcart_summary_list_row_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >

	<TextView
		android:id="@+id/shopcart_summary_storeparent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.5"
		android:text="@+id/shopcart_summary_storeparent"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:textStyle="normal"
		android:singleLine="false"
		android:gravity="left"
		android:padding="4dp" >
	</TextView>
	
	<TextView
		android:id="@+id/shopcart_summary_total"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:text="@+id/shopcart_summary_total"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:singleLine="true"
		android:gravity="left"
		android:padding="4dp" >
	</TextView>
	
	<TextView
		android:id="@+id/shopcart_summary_numitems"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.25"
		android:text="@+id/shopcart_summary_numitems"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:singleLine="true"
		android:gravity="left"
		android:padding="4dp" >
	</TextView>
	
	<!-- Hold meta for store parent id -->
	<TextView
		android:id="@+id/shopcart_summary_storeparent_id"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:visibility="gone"
		android:text="" />
</LinearLayout>
