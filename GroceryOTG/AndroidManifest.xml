<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.groceryotg.android"
		  android:versionCode="1"
		  android:versionName="@string/version_name">

	<uses-sdk
		android:minSdkVersion="10"
		android:targetSdkVersion="17"/>

	<!-- We have to explicitly declare we support larger screen sizes -->
	<!-- We don't really care or want to support small screens, since those are generally run Donut or lower -->
	<supports-screens
		android:smallScreens="false"
		android:normalScreens="true"
		android:largeScreens="true"
		android:xlargeScreens="true" >
	</supports-screens>

	<permission
		android:name="com.groceryotg.android.GroceryMapView.permission.MAPS_RECEIVE"
		android:protectionLevel="signature"/>

	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
	<uses-permission android:name="com.groceryotg.android.GroceryMapView.permission.MAPS_RECEIVE"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
	<uses-feature
		android:glEsVersion="0x00020000"
		android:required="true"/>

	<application
		android:name="GroceryApplication"
		android:allowBackup="true"
		android:label="@string/app_name"
		android:icon="@drawable/ic_launcher"
		android:theme="@style/Theme.Sherlock.Light">
		<!--android:theme can be one of the following: Theme.Sherlock, Theme.Sherlock.Light, or 
		 Theme.Sherlock.Light.DarkActionBar, or your custom theme must use one of the 
		 aforementioned as its parent. -->

		<meta-data
			android:name="com.google.android.maps.v2.API_KEY"
			android:value="AIzaSyDzLfi42UpxNSCITqOSlUURhMXj3i6N4BQ"/>
		<!--android:value="AIzaSyC7c-p21lKScqO8KfLZ_ro1SvD0v-I7bX4" />-->
		<!--use this if you are using debug.keystore-->

		<activity
			android:name=".SplashScreenActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		
		<activity
			android:name=".CategoryTopFragmentActivity"
			android:launchMode="singleTop"
			android:label="@string/title_main" >
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"  />
		</activity>

		<activity
			android:name=".GroceryPagerFragmentActivity"
			android:launchMode="singleTop"
			android:label="@string/title_grocery_pager" >
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"/>
		</activity>

		<activity
			android:name=".ShopCartOverviewFragmentActivity"
			android:label="@string/title_cart" >
		</activity>

		<activity
			android:name=".ShopCartAddFragmentActivity"
			android:label="@string/title_cart_detail" >
		</activity>

		<activity
			android:name=".MapFragmentActivity"
			android:label="@string/title_map" >
		</activity>
		
		<activity
			android:name=".GlobalSearchFragmentActivity"
			android:launchMode="singleTop"
			android:label="@string/title_search" >
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data android:name="android.app.searchable"
					   android:resource="@xml/searchable_global" />
		</activity>

		<activity
			android:name=".settings.SettingsActivity"
			android:label="@string/title_settings" >
		</activity>

		<service android:name=".services.NetworkHandler"/>
		<service android:name="com.groceryotg.android.services.location.LocationMonitorService"/>

		<receiver android:name="com.groceryotg.android.services.location.LocationMonitor"/>
		<receiver android:name="com.groceryotg.android.services.location.LocationReceiver"/>
		<receiver
			android:name="com.groceryotg.android.services.location.LocationServiceReceiver"
			android:exported="false" >
			<intent-filter>
				<action android:name="com.groceryotg.android.services.location.LocationServiceReceiver.LOCATION_SERVICE_RECEIVER_ENABLE" />
				<action android:name="com.groceryotg.android.services.location.LocationServiceReceiver.LOCATION_SERVICE_RECEIVER_DISABLE" />
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<provider
			android:name=".database.contentprovider.GroceryotgProvider"
			android:authorities="com.groceryotg.android.database.contentprovider"
			android:exported="false" >
		</provider>


	</application>

</manifest>
