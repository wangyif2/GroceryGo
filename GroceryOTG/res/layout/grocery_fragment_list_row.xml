<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	<!-- this is the default view that is initially shown -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >
		
		<!-- include the generic grocery list item layout -->
		<include
			layout="@layout/grocery_list_row" >
		</include>
		
		<!-- Make a darker grey divider line -->
		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#999999" >
		</View>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:paddingRight="4dp"
			android:paddingLeft="4dp"
			android:gravity="center_vertical" >
			
			<CheckBox
				android:id="@+id/grocery_row_in_shopcart"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@null"
				android:clickable="true"
				android:contentDescription="@string/groceryoverview_row_imagedesc"
				android:button="@drawable/ic_checkbox_shoplist" >
			</CheckBox>
		</LinearLayout>
	</LinearLayout>
	
	<!-- this is the expandable view that is initially hidden and will slide out when the more button is pressed -->
	<LinearLayout
		android:id="@+id/expandable"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:background="#ffffff" >
		
		<include
			layout="@layout/grocery_list_expanded_row" >
		</include>
	</LinearLayout>
</LinearLayout>


