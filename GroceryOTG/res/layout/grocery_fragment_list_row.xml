<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	<!-- this is the default view that is initially shown -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >
		
		<!-- include the generic grocery list item layout -->
		<include
			layout="@layout/grocery_list_row" >
		</include>
		
		<!-- Make a darker grey divider line -->
		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#e8e8e8" >
		</View>
		
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			
			android:gravity="center_vertical" >
			
			<CheckBox
				android:id="@+id/grocery_row_in_shopcart"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/ic_checkbox_shoplist_bg"
				android:clickable="true"
				android:contentDescription="@string/groceryoverview_row_imagedesc"
				android:button="@drawable/ic_menu_cart"
				android:drawablePadding="20dp" >
			</CheckBox>
		</RelativeLayout>
	</LinearLayout>
	
	<!-- this is the expandable view that is initially hidden and will slide out when the more button is pressed -->
	<include
		layout="@layout/grocery_list_expanded_row" >
	</include>
</LinearLayout>


