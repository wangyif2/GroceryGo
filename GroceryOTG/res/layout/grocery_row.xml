<?xml version="1.0" encoding="utf-8"?>


<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <ImageView
            android:src="@drawable/add_icon"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/groceryoverview_row_imagedesc">
        </ImageView>

        <!--TODO:hard coded Max width!!-->
        <TextView
            android:id="@+id/grocery_row_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:layout_marginTop="6dp"
            android:text="@+id/grocery_row_text"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:singleLine="false"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/grocery_row_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@+id/grocery_row_price_text"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:gravity="right"
            android:layout_weight="1.0"
            android:paddingRight="10dp">
        </TextView>
    </TableRow>
    <TableRow>
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    />
		<TextView 
		    android:id="@+id/grocery_row_store"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    />
    </TableRow>
</TableLayout>