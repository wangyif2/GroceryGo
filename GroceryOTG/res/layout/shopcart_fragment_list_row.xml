<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:weightSum="1.0"
			  android:baselineAligned="false" >

	<LinearLayout android:id="@+id/cart_rowMiddle"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="0.7"
		android:orientation="vertical"
		android:focusable="false"
		android:clickable="false">
		
		<TextView
			android:id="@+id/cart_item_id"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/cart_grocery_id"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/cart_grocery_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dp"
			android:textSize="16sp"
			android:fontFamily="sans-serif"
			android:textStyle="normal"
			android:singleLine="false"
			android:gravity="center_vertical"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:paddingTop="18dp"
			android:paddingBottom="18dp"
			android:text="@+id/cart_grocery_name_text">
		</TextView>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_weight="0.3"
		android:gravity="right"
		android:orientation="horizontal"
		android:paddingTop="14dp" >
		
		<CheckBox
		   	android:id="@+id/cart_row_in_shopcart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:clickable="true"
			android:contentDescription="@string/groceryoverview_row_imagedesc"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:button="@drawable/ic_checkbox_shoplist" >
		</CheckBox>
	</LinearLayout>
	
</LinearLayout>