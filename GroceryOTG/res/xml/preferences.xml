<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notification">

        <CheckBoxPreference
            android:key="notification_enabled"
            android:title="Enable Notification"
            android:summary="Enables notifications from this application"/>

        <ListPreference
            android:key="notification_freq"
            android:title="Frequency"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Stores">

        <MultiSelectListPreference
            android:key="store_select"
            android:title="Select a store"/>

    </PreferenceCategory>

</PreferenceScreen>