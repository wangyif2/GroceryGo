<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notification">

        <CheckBoxPreference
            android:key="notification_enabled"
            android:title="Enable Notification"
            android:summary="Enables notifications from this application"
            android:defaultValue="true" />

        <ListPreference
            android:key="notification_freq"
            android:title="@string/setting_notification_freq_title"
            android:summary="@string/setting_notification_freq_summary"
            android:entries="@array/freq_entry"
            android:entryValues="@array/freq_value"
            android:defaultValue="3" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Stores">

        <MultiSelectListPreference
            android:key="store_select"
            />

    </PreferenceCategory>

</PreferenceScreen>